---
const today = new Date();
import FooterLink from "./Links.astro";
---

<footer class="bg-primaryGray text-white py-4 fixed bottom-0 w-full">
  <nav class="flex justify-center items-center w-full text-white uppercase">
    <div class="internal-links flex space-x-8 lg:space-x-16">
      <FooterLink href="/" class="hover:text-primaryTeal">Home</FooterLink>
      <FooterLink href="/blog" class="hover:text-primaryTeal">Blog</FooterLink>
      <FooterLink href="/about" class="hover:text-primaryTeal">About</FooterLink
      >
      <FooterLink href="/contact" class="hover:text-primaryTeal"
        >Contact</FooterLink
      >
    </div>
  </nav>
  <div class="flex justify-center space-x-4">
    <a
      href="https://m.webtoo.ls/@astro"
      target="_blank"
      class="hover:text-gray-400"
    >
      <span class="sr-only">Follow Astro on Mastodon</span>
      <svg
        viewBox="0 0 16 16"
        aria-hidden="true"
        width="32"
        height="32"
        astro-icon="social/mastodon"></svg>
    </a>
    <a
      href="https://twitter.com/astrodotbuild"
      target="_blank"
      class="hover:text-gray-400"
    >
      <span class="sr-only">Follow Astro on Twitter</span>
      <svg
        viewBox="0 0 16 16"
        aria-hidden="true"
        width="32"
        height="32"
        astro-icon="social/twitter"></svg>
    </a>
    <a
      href="https://github.com/withastro/astro"
      target="_blank"
      class="hover:text-gray-400"
    >
      <span class="sr-only">Go to Astro's GitHub repo</span>
      <svg
        viewBox="0 0 16 16"
        aria-hidden="true"
        width="32"
        height="32"
        astro-icon="social/github"
