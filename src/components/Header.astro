---
import HeaderLink from "./HeaderLink.astro";
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
---

<header class="relative bg-zinc-900 shadow-md py-4 mb-8">
  <div class="container mx-auto flex justify-between items-center">
    <Image src={logo} alt="Site Logo" class="mt-2 ml-2 hidden sm:block" />
    <nav class="flex justify-center items-center w-full">
      <div class="internal-links flex space-x-4">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="/contact">Contact</HeaderLink>
      </div>
    </nav>
  </div>
</header>
