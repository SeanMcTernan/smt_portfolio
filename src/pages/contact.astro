---
import BaseLayout from "../layouts/BaseLayout.astro"; // Import the BaseLayout component
---

<BaseLayout pageTitle="Contact" pageDescription="Get in contact with me.">
  <div class="flex justify-center px-4 py-8">
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      class="max-w-lg w-full p-8 bg-primaryGray shadow-md rounded-lg border border-secondaryGray"
    >
      <p class="mb-4">
        <label class="block text-sm text-primaryWhite mb-2"
          >Your Name:
          <input
            type="text"
            name="name"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-primaryGray leading-tight focus:outline-none focus:shadow-outline mt-4 bg-primaryWhite"
          />
        </label>
      </p>
      <p class="mb-4">
        <label class="block text-primaryWhite text-sm mb-2"
          >Your Email:
          <input
            type="email"
            name="email"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-primaryGray leading-tight focus:outline-none focus:shadow-outline mt-4 bg-primaryWhite"
          />
        </label>
      </p>
      <p class="mb-4">
        <label class="block text-primaryWhite mb-2"
          >Message:
          <textarea
            name="message"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-primaryGray leading-tight focus:outline-none focus:shadow-outline mt-4 bg-primaryWhite"
          ></textarea>
        </label>
      </p>
      <p class="mb-4">
        <button
          type="submit"
          class="border border-primaryTeal text-primaryTeal py-2 px-4 rounded-lg inline-block hover:bg-primaryTeal hover:text-white mt-4"
          >Send</button
        >
      </p>
    </form>
  </div>
</BaseLayout>
