---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { contentfulClient } from "../../lib/contentful";
import type { TypeProjectData } from "../../lib/contentful";
import { type Asset } from "contentful";

const entries = await contentfulClient.getEntries<TypeProjectData>({
  content_type: "projectData",
});
---

<BaseLayout
  pageTitle="Projects"
  pageDescription="Explore my projects and skills."
>
  <section class="container mx-auto">
    <h1 class="text-4xl font-bold text-center mt-8">Projects</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
      {
        entries.items.map((item) => {
          //Some code to prevent TS errors and to get the image URL and alt text
          const cardImage = item.fields.cardImage as Asset;
          const imageUrl =
            typeof cardImage.fields.file?.url === "string"
              ? cardImage.fields.file.url
              : "";
          const imageAlt =
            typeof cardImage.fields.title === "string"
              ? cardImage.fields.title
              : "";
          //Some code to prevent TS errors and to get the image URL and alt text
          return (
            <div class="bg-white shadow-md rounded-lg p-4">
              <img
                src={imageUrl}
                alt={imageAlt}
                class="w-full h-48 object-cover mt-4"
              />
              <h2 class="text-xl font-bold">{item.fields.projectTitle}</h2>
              <p class="mt-4">{item.fields.infoCardDescription}</p>
              <a
                href={`/projects/${item.fields.slug}`}
                class="block text-primaryTeal mt-4 hover:underline"
              >
                Read More
              </a>
            </div>
          );
        })
      }
    </div>
  </section>
</BaseLayout>
